<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="723.0" prefWidth="1081.0" style="-fx-background-image: url('/User/images/background_front.jpg'); -fx-background-size: 100% 100%;" stylesheets="@css/modern_styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.User.FrontController">
    <ImageView fitHeight="723.0" fitWidth="1095.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@images/background_front.jpg" />
        </image>
    </ImageView>

    <MenuBar layoutX="0.0" layoutY="0.0" prefHeight="30.0" prefWidth="1083.0" style="-fx-background-color: transparent;">
        <menus>
            <!-- Menu: Compte -->
            <Menu style="-fx-text-fill: purple;" text="Compte">
                <items>
                    <MenuItem onAction="#handleClicksFF1" style="-fx-text-fill: purple;" text="Ouvrir Compte" />
                    <MenuItem onAction="#handleClicksFF" style="-fx-text-fill: purple;" text="Ouvrir Virement" />


                </items>
            </Menu>

            <!-- Menu: Transaction -->
            <Menu style="-fx-text-fill: purple;" text="Transaction">
                <items>
                    <MenuItem onAction="#openAjouterTransactionWindow" style="-fx-text-fill: purple;" text="Ajouter Transaction" />
                    <MenuItem onAction="#openAfficherTransactionsWindow" style="-fx-text-fill: purple;" text="Afficher Transactions" />
                </items>
            </Menu>

            <!-- Menu: Crédit -->
            <Menu style="-fx-text-fill: purple;" text="Crédit">
                <items>
                    <MenuItem onAction="#demanderCredit" onMenuValidation="#consulterCredit" style="-fx-text-fill: purple;" text="Demander Crédit" />
                    <MenuItem onAction="#consulterCredit" style="-fx-text-fill: purple;" text="Consulter Crédit" />
                </items>
            </Menu>



            <!-- Menu: Assurances -->
            <Menu style="-fx-text-fill: purple;" text="Assurances">
                <items>
                    <MenuItem onAction="#goToFrontAssuranceeButtonClicked" style="-fx-text-fill: purple;" text="ConsulterAssurance" />

                </items>
            </Menu>
            <Menu text="Profile">
                <items>
                    <MenuItem text="Edit Profile" onAction="#goToProfileButtonClicked" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <Button fx:id="signoutBtn" layoutX="977.0" layoutY="661.0" mnemonicParsing="false" onAction="#signout" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: red;" styleClass="modern-button" text="Sign Out" />

</AnchorPane>
