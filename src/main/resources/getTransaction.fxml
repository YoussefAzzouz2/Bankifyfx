                <TableColumn fx:id="idColumn" prefWidth="39.0" text="ID" />
                <TableColumn fx:id="montantColumn" prefWidth="73.0" text="Montant" />
                <TableColumn fx:id="dateColumn" prefWidth="113.0" text="Date transaction" />
                <TableColumn fx:id="typeColumn" prefWidth="68.0" text="Type" />
