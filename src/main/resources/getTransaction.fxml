    <children>
        <ImageView fitHeight="409.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@pink.jpg" />
            </image>
        </ImageView>
        <TableView fx:id="transactionTable" layoutX="29.0" layoutY="113.0" prefHeight="217.0" prefWidth="542.0" style="-fx-background-color: #fbe6de;">
