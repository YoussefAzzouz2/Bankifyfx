                <TableColumn fx:id="modifyColumn" prefWidth="82.0" text="Modify"  />
                <TableColumn fx:id="deleteColumn" prefWidth="88.0" text="Delete" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
