<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #cf87c4;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.modiCompte">

    <children>
        <VBox alignment="CENTER" layoutX="50" layoutY="30" prefWidth="300" spacing="15">
            <children>

                <!-- Label indiquant l'ID du compte client à modifier -->
                <Label fx:id="compteClientLabel" text="Modification du compte client ID: " />

                <!-- Champs de texte pour la modification des détails du compte client -->
                <HBox spacing="10">
                    <Label text="Nom:" />
                    <TextField fx:id="nomField">
                        <HBox.margin>
                            <Insets left="90.0" />
                        </HBox.margin>
                    </TextField>
                </HBox>

                <HBox spacing="10">
                    <Label text="Prénom:" />
                    <TextField fx:id="prenomField">
                        <HBox.margin>
                            <Insets left="63.0" />
                        </HBox.margin>
                    </TextField>
                </HBox>

                <HBox spacing="10">
                    <Label text="RIB:" />
                    <TextField fx:id="ribField">
                        <HBox.margin>
                            <Insets left="84.0" />
                        </HBox.margin>
                    </TextField>
                </HBox>

                <HBox spacing="10">
                    <Label text="Mail:" />
                    <TextField fx:id="mailField">
                        <HBox.margin>
                            <Insets left="77.0" />
                        </HBox.margin>
                    </TextField>
                </HBox>

                <HBox spacing="10">
                    <Label text="Tel:" />
                    <TextField fx:id="telField">
                        <HBox.margin>
                            <Insets left="91.0" />
                        </HBox.margin>
                    </TextField>
                </HBox>

                <HBox spacing="10">
                    <Label text="Solde:" />
                    <TextField fx:id="soldeField">
                        <HBox.margin>
                            <Insets left="79.0" />
                        </HBox.margin>
                    </TextField>
                </HBox>

                <!-- Bouton de modification -->
                <Button fx:id="modifierButton" onAction="#modifierCompteClient" style="-fx-background-color: #fbe6de;" text="Modifier" />
            </children>
        </VBox>
    </children>
</AnchorPane>
