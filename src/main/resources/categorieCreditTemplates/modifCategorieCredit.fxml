<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #cf87c4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.categorieCreditController.ModifCategorieCredit">
    <children>
        <VBox alignment="CENTER" layoutX="50" layoutY="30" prefWidth="300" spacing="15">
            <children>
                <Label fx:id="categorieLabel" text="" />
                <HBox spacing="10">
                    <Label text="Nom:">
                  <HBox.margin>
                     <Insets top="4.0" />
                  </HBox.margin></Label>
                    <TextField fx:id="nomField">
                    <HBox.margin>
                        <Insets left="90.0" />
                    </HBox.margin></TextField>
                </HBox>
                <HBox spacing="10">
                    <Label text="Montant minimale:">
                  <HBox.margin>
                     <Insets top="4.0" />
                  </HBox.margin></Label>
                    <TextField fx:id="minMontantField">
                        <HBox.margin>
                            <Insets left="20.0" />
                        </HBox.margin></TextField>
                </HBox>
                <HBox spacing="10">
                    <Label text="Montant maximale:">
                  <HBox.margin>
                     <Insets top="4.0" />
                  </HBox.margin></Label>
                    <TextField fx:id="maxMontantField">
                        <HBox.margin>
                            <Insets left="18.0" />
                        </HBox.margin></TextField>
                </HBox>
                <Button fx:id="modifierButton" onAction="#modifierCategorie" style="-fx-background-color: #fbe6de;" text="Modifier" />
            </children>
        </VBox>
    </children>
</AnchorPane>
